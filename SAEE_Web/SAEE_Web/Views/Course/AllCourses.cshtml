@model List<SAEE_Web.Entities.EnrolledCoursesEnt>

@{
    ViewBag.Title = "AllCourses";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .title-container {
        background-color: #401ade;
        border-radius: 10px;
        padding: 10px;
        margin-bottom: 20px;
        text-align: center;
        width: 20%;
    }
    .title-little {
        background-color: #401ade; /* Color de fondo del contenedor */
        border-radius: 10px; /* Radio de borde para los bordes redondeados */
        padding: 10px; /* Espaciado interno del contenedor */
        margin-bottom: 20px; /* Espaciado inferior del contenedor */
        text-align: center; /* Alineación del texto al centro */
        width: 18%;
    }
    .title-text {
        color: #ffffff;
        font-weight: bold; /* Estilo de fuente en negrita */
        margin: 0; /* Elimina el margen predeterminado del título */
    }
</style>

@if (Model.Count() > 0)
{
    <br />
    <div class="d-flex w-100 justify-content-center">
        <div class="title-container">
            <h2 class="title-text"><i class="fas fa-list icon" style="margin-right:10px;"></i>Mis cursos</h2>
        </div>
    </div>
    <hr />
    <main class="features_list d-md-flex flex-wrap" style="display:flex; justify-content:center; max-width: 960px; margin: 0 auto;">

        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="features_list-item " data-order="1" data-aos="fade-up" style="margin-bottom: 20px; margin-right: 60px;">
                        <div class="card" style="width: 18rem; padding: 20px; height:31rem;">
                            <div class="content">
                                <img class="card-img-top" style="border-block-color:aqua"  src="~/Images/librosEj.jpg" alt="Ejemplo Curso">

                                <div class="card_main" style=" padding:10px">
                                    <h6 class="card_main-title" style="text-align:center">@item.CourseName</h6>
                                    <p class="card_main-text" style="text-align:center">@item.CourseDescription</p>
                                    <p class="card_main-text" style="text-align:center">@item.TechearName</p>
                                </div>
                                <a href="@Url.Action("SpecificCourse", "Course", new { q = item.CourseId })" id="" class="btn btn-primary" style="display:flex; width:80%; height:45%">Ir al curso</a>

                            </div>
                        </div>
                    </div>
                </div>

                    }
                </div>

</main>
    <hr />
    <br />
}
else
{
    <div style="display: flex; justify-content: center; align-items: center; height: 60vh;">
        <div class="alert alert-info" role="alert" style="text-align: center; max-width: 960px; font-size: 15pt">
            No hay cursos en este momento.
        </div>
    </div>
}