@model SAEE_Web.Entities.UserEnt

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main class="contacts">
    <section class="contacts_form">
        <div class="container">
            <div class="contacts_form-header">
                <h2 class="contacts_form-header_title">Inicio de Sesión</h2>
            </div>
            @if (ViewBag.BoxMessage != null)
            {
                <div class="alert alert-danger" role="alert" style="text-align: center; color: red; border-color: red; ">
                    @ViewBag.BoxMessage
                </div>
            }

            @using (Html.BeginForm("Login", "User", FormMethod.Post, new { @class = "contacts_form-form" }))
            {
                <div class="form-group">
                    <label style="margin-right: 53rem;">Email:</label>
                    @Html.TextBoxFor(m => m.Email, new { @class = "field required", @type = "email", @placeholder = "Email" })

                    @* ALERT *@
                    @if (ViewBag.MessageMail != null)
                    {
                        <p style="color:red;margin-right:15rem;">@ViewBag.MessageMail</p>
                    }
                </div>
                <div class="form-group">
                    <label style="margin-right: 52rem;">Password:</label>
                    @Html.TextBoxFor(m => m.Password, new { @class = "field required", @type = "password", @placeholder = "Contraseña" })

                    @* ALERT *@
                    @if (ViewBag.MessagePass != null)
                    {
                        <p style="color: red;margin-right:15rem;">@ViewBag.MessagePass</p>
                    }
                </div>

                <div class="contacts_form-form_footer">
                    <input type="submit" class="btn btn--login" style="color:white;" value="INICIAR SESIÓN">
                </div>

                <div class="text-center mt-4 font-weight-light">
                    ¿Olvidaste tu contraseña? <a href="@Url.Action("RecoverPassword","User")" class="text-primary">Recuperar</a>
                </div>
            }
        </div>
    </section>
</main>
